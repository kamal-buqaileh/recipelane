<div class="container">
  <%= paginate @recipes %>

  <%= form_for :recipe, url: recipes_path, method: :get, remote: true do |f| %>
    any part of any ingredients: <%= f.text_field :any_ingredients%>
    <%= f.submit :search %>
  <% end %>

  <%= form_for :recipe, url: recipes_path, method: :get, remote: true do |f| %>
    exact set of ingredients: <%= f.text_field :full_ingredients%>
    <%= f.submit :search %>
  <% end %>


  <table class="table table-striped table-bordered" style="width: 1000px;">
    <thead>

      <th>Author</th>
      <th>Name</th>
      <th>Ingredients</th>
      <th>Difficulty</th>
      <th>Prep Time</th>
      <th>Cook Time</th>
      <th>Total Time</th>
      <th>view</th>

    </thead>
    <tbody>
      <%@recipes.pluck(:author, :name, :ingredients, :difficulty, :prep_time, :cook_time, :total_time, :id).each do |recipe|%>
        <tr>
          <td> <%=recipe[0]%> </td>
          <td> <%=recipe[1]%> </td>
          <td> <%=recipe[2].join(', ')%> </td>
          <td> <%=recipe[3]%> </td>
          <td> <%=recipe[4]%> </td>
          <td> <%=recipe[5]%> </td>
          <td> <%=recipe[6]%> </td>
          <td> <%=link_to "view",  recipe_path(recipe[7])%>
        </tr>
      <%end%>
    </tbody>
  </table>
</div>

